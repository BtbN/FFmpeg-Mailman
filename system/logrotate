/opt/mailman/core/logs/*.log {
        daily
        missingok
        rotate 7
        compress
        delaycompress
        sharedscripts
        postrotate
        docker compose -f /opt/mailman/docker-compose.yaml restart core
        endscript
}

/opt/mailman/web/logs/*.log {
        daily
        missingok
        rotate 7
        compress
        delaycompress
        sharedscripts
        postrotate
        docker compose -f /opt/mailman/docker-compose.yaml restart web
        endscript
}
